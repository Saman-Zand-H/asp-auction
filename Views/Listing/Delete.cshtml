@model Auction.Models.Listing

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Title: @Model.Title</h4>
    <h4>Description: @Model.Description</h4>
    <h4>Price: $@Model.Price</h4>
    <h4>User: @if (Model.IdentityUser != null)
        {
            @Model.IdentityUser
        }
        else
        {
            <span>Anonymous</span>
        }</h4>
    <img src="/Images/@Model.ImagePath" style="max-height: 10rem" />
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</form>